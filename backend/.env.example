# API Keys
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=optional_for_tracing_only

# Qdrant Vector Database
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=textbook_chunks

# Neon Postgres Database
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=50

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# OpenAI Agents SDK Settings
OPENAI_DEFAULT_MODEL=gemini-1.5-flash
LITELLM_MODEL=gemini-1.5-flash

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_min_32_characters_long_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
